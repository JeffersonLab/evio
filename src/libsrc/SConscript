# scons build file for evio
Import('env', 'libDir', 'incDir', 'debugSuffix')

fileList = ['evio.c',
            'evioswap.c',
            'evio_util.c',
            'swap_util.c',
            'xml_util.c']

env.AppendUnique(CPPPATH = ['.'])
evioLib = env.SharedLibrary(target = 'evio'+debugSuffix, source = fileList)

env.Alias("install", env.Install(target = incDir, source = 'evio.h'))
env.Alias("install", env.Install(target = libDir, source = evioLib))
