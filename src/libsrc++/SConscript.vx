# scons build file for evio
Import('env', 'libInstallDir', 'incInstallDir', 'debugSuffix')

fileList = ['evioException.cc', 'evioUtil.cc']

env.AppendUnique(CPPPATH = ['.', '#src/libsrc'])
evioxxLib = env.SharedLibrary(target = 'evioxx'+debugSuffix, source = fileList)
    
env.Alias("install", env.Install(target = incInstallDir, source = ['evioException.hxx', 'evioUtil.hxx', 'evioUtilTemplates.hxx']))
env.Alias("install", env.Install(target = libInstallDir, source = evioxxLib))
